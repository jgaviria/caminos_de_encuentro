<!-- app/views/addresses/edit.html.erb -->
<div class="max-w-md mx-auto mt-10">
  <h2 class="text-2xl font-bold mb-5">Edit Address Information</h2>

  <!-- Progress Bar -->
  <div class="w-full bg-gray-200 rounded-full h-2.5 mb-5">
    <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= @progress_percentage %>%;"></div>
  </div>

  <%= form_with(model: @address, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :country, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :country, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm', value: 'Colombia', readonly: true %>
    </div>
    <div class="mb-4">
      <%= form.label :state, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :state, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="mb-4">
      <%= form.label :city, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :city, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="mb-4">
      <%= form.label :neighborhood, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :neighborhood, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="mb-4">
      <%= form.label :street_address, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :street_address, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="mb-4">
      <%= form.label :postal_code, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :postal_code, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="flex justify-between items-center">
      <%= form.submit 'Next', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <div class="text-sm text-gray-600">Step 2 of 3</div>
    </div>
  <% end %>
</div>
