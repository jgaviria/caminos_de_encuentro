<!-- Admin Matches Management -->
<div class="space-y-8">
  <!-- Enhanced Admin Header -->
  <div class="relative bg-gradient-to-r from-purple-600 via-purple-700 to-indigo-700 rounded-2xl shadow-xl overflow-hidden">
    
    <div class="relative px-6 py-10 sm:px-10 sm:py-12">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <!-- Main Header Content -->
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-white mb-4"><%= t('admin.matches_title') %></h1>
          <p class="text-purple-100 text-lg font-medium"><%= t('admin.review_manage_matches') %></p>
          <p class="text-purple-200 text-sm mt-1 opacity-90">
            <%= @stats[:total_matches] %> <%= t('admin.total_matches') %> • 
            <%= @stats[:verified_matches] %> <%= t('admin.verified') %> • 
            <%= @stats[:pending_matches] %> <%= t('admin.pending_review') %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Statistics Section -->
  <div class="space-y-6">
    <!-- Section Header -->
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-2xl font-bold text-gray-900"><%= t('admin.system_overview') %></h2>
        <p class="text-gray-600 mt-1"><%= t('admin.key_metrics') %></p>
      </div>
      <div class="text-sm text-gray-500">
        <%= t('admin.last_updated') %> <%= Time.current.strftime("%B %d, %Y at %I:%M %p") %>
      </div>
    </div>

    <!-- Enhanced Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
      <!-- Total Matches -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600"><%= t('admin.total_matches') %></p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_matches] %></p>
          </div>
        </div>
      </div>

      <!-- Verified -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600"><%= t('admin.verified') %></p>
            <div class="flex items-baseline">
              <p class="text-2xl font-bold text-gray-900"><%= @stats[:verified_matches] %></p>
              <% if @stats[:total_matches] > 0 %>
                <p class="ml-2 text-sm text-green-600"><%= ((@stats[:verified_matches].to_f / @stats[:total_matches]) * 100).round(1) %>%</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Pending -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600"><%= t('admin.pending') %></p>
            <div class="flex items-baseline">
              <p class="text-2xl font-bold text-gray-900"><%= @stats[:pending_matches] %></p>
              <% if @stats[:pending_matches] > 0 %>
                <p class="ml-2 text-sm text-yellow-600"><%= t('admin.needs_review') %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- High Confidence -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600"><%= t('admin.high_confidence') %></p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:high_confidence_matches] %></p>
          </div>
        </div>
      </div>

      <!-- Recent -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600"><%= t('admin.recent_7_days') %></p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:recent_matches] %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Table with Integrated Filters and Actions -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <!-- Table Header with Modern Layout -->
    <div class="border-b border-gray-200 bg-gray-50">
      <div class="px-6 py-4">
        <!-- Top Row: Title and Search -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h3 class="text-lg font-semibold text-gray-900"><%= t('admin.matches_title') %></h3>
            <p class="text-sm text-gray-600 mt-1">
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mr-2 matches-count">
                <%= @matches.count %>
              </span>
              <%= t('admin.matches_displayed') %>
            </p>
          </div>
          
          <!-- Search Form -->
          <form id="search-form" class="flex items-center gap-2">
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
              <input type="text" id="search" name="search" value="<%= params[:search] %>" placeholder="<%= t('admin.search_matches') %>..."
                     class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 w-64 bg-white shadow-sm">
            </div>
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200 shadow-sm">
              <%= t('general.search') %>
            </button>
          </form>
        </div>
        
        <!-- Bottom Row: Filters -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mt-4 pt-4 border-t border-gray-200">
          <!-- Status Filter Pills -->
          <div class="flex items-center gap-2">
            <span class="text-sm font-medium text-gray-700 mr-2"><%= t('admin.status') %>:</span>
            <div class="flex items-center gap-2">
              <button type="button" data-filter="verified" data-value="" 
                      class="filter-button inline-flex items-center px-2.5 py-1 text-xs font-medium rounded-full transition-colors duration-200 #{params[:verified].blank? ? 'bg-blue-600 text-white shadow-sm' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50'}">
                <%= t('general.all') %>
              </button>
              <button type="button" data-filter="verified" data-value="true" 
                      class="filter-button inline-flex items-center px-2.5 py-1 text-xs font-medium rounded-full transition-colors duration-200 #{params[:verified] == 'true' ? 'bg-green-600 text-white shadow-sm' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50'}">
                <%= t('admin.verified') %>
              </button>
              <button type="button" data-filter="verified" data-value="false" 
                      class="filter-button inline-flex items-center px-2.5 py-1 text-xs font-medium rounded-full transition-colors duration-200 #{params[:verified] == 'false' ? 'bg-yellow-600 text-white shadow-sm' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50'}">
                <%= t('admin.pending') %>
              </button>
            </div>
          </div>

          <!-- Score Filter -->
          <form id="score-filter-form" class="flex items-center gap-2">
            <span class="text-sm font-medium text-gray-700"><%= t('admin.min_score') %>:</span>
            <input type="number" id="min_score" name="min_score" step="0.1" min="0" max="1" value="<%= params[:min_score] %>" placeholder="0.0" 
                   class="border border-gray-300 rounded-lg px-3 py-1.5 text-sm text-gray-700 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 w-20 bg-white shadow-sm">
            <button type="submit" class="inline-flex items-center px-2.5 py-1 bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium rounded-lg transition-colors duration-200 shadow-sm">
              <%= t('general.apply') %>
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Modern Bulk Actions Bar -->
    <%= form_with url: bulk_verify_admin_matches_path, method: :post, local: true, id: "bulk_form" do |form| %>
      <div class="px-6 py-3 bg-blue-50 border-b border-blue-200" id="bulk-actions-bar" style="display: none;">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <span class="text-sm font-medium text-blue-900">
              <span id="selected-count-bar">0</span> <%= t('admin.matches_selected') %>
            </span>
          </div>
          <div class="flex items-center gap-3">
            <button type="submit" onclick="this.form.action='<%= bulk_verify_admin_matches_path %>'" 
                    class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition-colors duration-200 shadow-sm">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <%= t('admin.verify_selected') %>
            </button>
            
            <button type="submit" onclick="if(!confirm('<%= t('admin.confirm_reject_selected') %>')) return false; this.form.action='<%= bulk_reject_admin_matches_path %>'" 
                    class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors duration-200 shadow-sm">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <%= t('admin.reject_selected') %>
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Select All Header -->
    <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
      <div class="flex items-center">
        <input type="checkbox" id="select_all" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500 focus:ring-2">
        <label for="select_all" class="ml-3 text-sm font-medium text-gray-700"><%= t('admin.select_all') %></label>
      </div>
    </div>

    <!-- Loading Indicator -->
    <div id="loading-indicator" class="hidden px-6 py-8 text-center">
      <div class="inline-flex items-center">
        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span class="text-sm text-gray-600"><%= t('admin.loading_matches') %>...</span>
      </div>
    </div>

    <!-- Table Content Container -->
    <div id="table-content">
    <% if @matches.any? %>
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left">
                <span class="sr-only">Select</span>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.date') %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.seeker') %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.found_person') %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.similarity') %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.status') %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.actions') %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @matches.each do |match| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <input type="checkbox" name="match_ids[]" value="<%= match.id %>" class="match_checkbox h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500 focus:ring-2">
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <div class="font-medium"><%= match.created_at.strftime("%b %d, %Y") %></div>
                  <div class="text-xs text-gray-500"><%= time_ago_in_words(match.created_at) %> <%= t('general.ago') %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="h-8 w-8 bg-green-500 rounded-full flex items-center justify-center">
                      <span class="text-white text-xs font-medium">
                        <%= match.search_profile.first_name.first.upcase %>
                      </span>
                    </div>
                    <div class="ml-3">
                      <div class="text-sm font-medium text-gray-900">
                        <%= match.search_profile.first_name %> <%= match.search_profile.last_name %>
                      </div>
                      <div class="text-xs text-gray-500"><%= match.search_profile.user.email %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if match.user&.personal_info %>
                    <div class="flex items-center">
                      <div class="h-8 w-8 bg-purple-500 rounded-full flex items-center justify-center">
                        <span class="text-white text-xs font-medium">
                          <%= match.user.personal_info.first_name.first.upcase %>
                        </span>
                      </div>
                      <div class="ml-3">
                        <div class="text-sm font-medium text-gray-900">
                          <%= match.user.personal_info.first_name %> <%= match.user.personal_info.last_name %>
                        </div>
                        <div class="text-xs text-gray-500"><%= match.user.email %></div>
                      </div>
                    </div>
                  <% else %>
                    <div class="flex items-center">
                      <div class="h-8 w-8 bg-gray-300 rounded-full flex items-center justify-center">
                        <span class="text-gray-500 text-xs">?</span>
                      </div>
                      <div class="ml-3">
                        <span class="text-sm text-gray-400"><%= t('admin.no_personal_info') %></span>
                      </div>
                    </div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-20 bg-gray-200 rounded-full h-2 mr-3">
                      <div class="bg-gradient-to-r from-blue-500 to-purple-600 h-2 rounded-full transition-all duration-300" style="width: <%= (match.similarity_score * 100).round(1) %>%"></div>
                    </div>
                    <span class="text-sm font-medium text-gray-900"><%= (match.similarity_score * 100).round(1) %>%</span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if match.is_verified? %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                      <%= t('admin.verified') %>
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 border border-yellow-200">
                      <%= t('admin.pending') %>
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to admin_match_path(match), 
                      class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium text-blue-600 border border-blue-600 rounded-full hover:bg-blue-600 hover:text-white transition-colors duration-200" do %>
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    <span><%= t('general.view') %></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if respond_to?(:paginate) %>
        <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
          <div class="text-sm text-gray-700">
            <%= t('admin.showing_matches_page') %>
          </div>
          <div class="flex space-x-2">
            <%= paginate @matches %>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t('admin.no_matches_found') %></h3>
        <p class="text-gray-600 mb-6">
          <%= t('admin.no_matches_description') %>
        </p>
        <%= link_to t('admin.view_search_profiles'), search_profiles_path, 
            class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200" %>
      </div>
    <% end %>
    </div> <!-- End table-content -->
  </div>
</div>

<script>
  // Global filter state
  let currentFilters = {
    search: '<%= params[:search] %>',
    verified: '<%= params[:verified] %>',
    min_score: '<%= params[:min_score] %>'
  };

  // Enhanced checkbox handling with bulk actions bar
  function updateSelectionCounter() {
    const checkboxes = document.querySelectorAll('.match_checkbox');
    const checkedBoxes = document.querySelectorAll('.match_checkbox:checked');
    const bulkActionsBar = document.getElementById('bulk-actions-bar');
    const counterBar = document.getElementById('selected-count-bar');
    
    // Update counter and show/hide bulk actions bar
    if (counterBar) {
      counterBar.textContent = checkedBoxes.length;
    }
    
    if (bulkActionsBar) {
      if (checkedBoxes.length > 0) {
        bulkActionsBar.style.display = 'block';
      } else {
        bulkActionsBar.style.display = 'none';
      }
    }
    
    // Update select all checkbox state
    const selectAllCheckbox = document.getElementById('select_all');
    if (selectAllCheckbox) {
      if (checkedBoxes.length === 0) {
        selectAllCheckbox.indeterminate = false;
        selectAllCheckbox.checked = false;
      } else if (checkedBoxes.length === checkboxes.length) {
        selectAllCheckbox.indeterminate = false;
        selectAllCheckbox.checked = true;
      } else {
        selectAllCheckbox.indeterminate = true;
        selectAllCheckbox.checked = false;
      }
    }
  }

  // Show loading indicator
  function showLoading() {
    document.getElementById('loading-indicator').classList.remove('hidden');
    document.getElementById('table-content').style.opacity = '0.5';
  }

  // Hide loading indicator
  function hideLoading() {
    document.getElementById('loading-indicator').classList.add('hidden');
    document.getElementById('table-content').style.opacity = '1';
  }

  // Update filter button states
  function updateFilterButtonStates() {
    document.querySelectorAll('.filter-button').forEach(button => {
      const filterType = button.dataset.filter;
      const filterValue = button.dataset.value;
      
      if (filterType === 'verified') {
        const isActive = (currentFilters.verified === filterValue) || 
                        (currentFilters.verified === '' && filterValue === '');
        
        // Reset button to base classes
        button.className = 'filter-button inline-flex items-center px-2.5 py-1 text-xs font-medium rounded-full transition-colors duration-200';
        
        if (isActive) {
          button.className += ' bg-blue-600 text-white shadow-sm';
        } else {
          button.className += ' bg-white text-gray-700 border border-gray-300 hover:bg-gray-50';
        }
      }
    });
  }

  // Update URL without page refresh
  function updateURL() {
    const params = new URLSearchParams();
    if (currentFilters.search) params.set('search', currentFilters.search);
    if (currentFilters.verified) params.set('verified', currentFilters.verified);
    if (currentFilters.min_score) params.set('min_score', currentFilters.min_score);
    
    const newURL = window.location.pathname + (params.toString() ? '?' + params.toString() : '');
    window.history.pushState({}, '', newURL);
  }

  // Fetch filtered data
  async function fetchFilteredData() {
    showLoading();
    
    try {
      const params = new URLSearchParams();
      if (currentFilters.search) params.set('search', currentFilters.search);
      if (currentFilters.verified) params.set('verified', currentFilters.verified);
      if (currentFilters.min_score) params.set('min_score', currentFilters.min_score);
      params.set('format', 'json');
      
      const response = await fetch(`<%= admin_matches_path %>?${params.toString()}`, {
        headers: {
          'Accept': 'application/json',
          'X-Requested-With': 'XMLHttpRequest'
        }
      });
      
      if (!response.ok) throw new Error('Network response was not ok');
      
      const data = await response.json();
      updateTableContent(data);
      updateURL();
      updateFilterButtonStates();
      
    } catch (error) {
      console.error('Error fetching data:', error);
      // Show error message or fallback
    } finally {
      hideLoading();
    }
  }

  // Update table content with new data
  function updateTableContent(data) {
    document.getElementById('table-content').innerHTML = data.html;
    
    // Update results count
    const countElement = document.querySelector('.matches-count');
    if (countElement) {
      countElement.textContent = data.count;
    }
    
    // Re-attach event listeners for new checkboxes
    document.querySelectorAll('.match_checkbox').forEach(checkbox => {
      checkbox.addEventListener('change', updateSelectionCounter);
    });
    
    // Update selection counter
    updateSelectionCounter();
  }

  // Handle filter button clicks
  document.addEventListener('click', function(e) {
    if (e.target.classList.contains('filter-button')) {
      e.preventDefault();
      const filterType = e.target.dataset.filter;
      const filterValue = e.target.dataset.value;
      
      currentFilters[filterType] = filterValue;
      fetchFilteredData();
    }
  });

  // Handle search form submission
  document.getElementById('search-form').addEventListener('submit', function(e) {
    e.preventDefault();
    currentFilters.search = document.getElementById('search').value;
    fetchFilteredData();
  });

  // Handle score filter form submission
  document.getElementById('score-filter-form').addEventListener('submit', function(e) {
    e.preventDefault();
    currentFilters.min_score = document.getElementById('min_score').value;
    fetchFilteredData();
  });

  // Handle select all checkbox
  document.addEventListener('change', function(e) {
    if (e.target.id === 'select_all') {
      const checkboxes = document.querySelectorAll('.match_checkbox');
      checkboxes.forEach(checkbox => {
        checkbox.checked = e.target.checked;
      });
      updateSelectionCounter();
    }
  });

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', function() {
    updateSelectionCounter();
    updateFilterButtonStates();
    
    // Load initial table content
    fetchFilteredData();
  });
</script>