<div class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
      <%= link_to "‚Üê Back to Admin Matches", admin_matches_path, class: "text-indigo-600 hover:text-indigo-900" %>
    </div>

    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h1 class="text-2xl font-bold text-gray-900">Match #<%= @match.id %></h1>
          <div class="flex space-x-3">
            <% unless @match.is_verified? %>
              <%= link_to "Verify Match", verify_admin_match_path(@match), method: :patch, 
                  class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
            <% end %>
            <%= link_to "Reject Match", reject_admin_match_path(@match), method: :delete, 
                confirm: "Are you sure you want to reject this match?",
                class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
          </div>
        </div>
      </div>

      <div class="p-6">
        <!-- Match Overview -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-lg font-medium text-gray-900 mb-2">Match Score</h3>
            <div class="flex items-center">
              <div class="w-24 bg-gray-200 rounded-full h-3 mr-3">
                <div class="bg-blue-600 h-3 rounded-full" style="width: <%= (@match.similarity_score * 100).round(1) %>%"></div>
              </div>
              <span class="text-xl font-bold text-gray-900"><%= (@match.similarity_score * 100).round(1) %>%</span>
            </div>
          </div>

          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-lg font-medium text-gray-900 mb-2">Status</h3>
            <% if @match.is_verified? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                ‚úÖ Verified
              </span>
            <% else %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                ‚è≥ Pending Review
              </span>
            <% end %>
          </div>

          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-lg font-medium text-gray-900 mb-2">Created</h3>
            <p class="text-gray-600"><%= @match.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>

        <!-- Profile Comparison -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Search Profile (Seeker) -->
          <div class="border rounded-lg p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 text-center bg-blue-50 py-2 rounded">
              üîç Search Profile (Seeker)
            </h3>
            
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-500">Full Name</label>
                <p class="text-lg font-medium text-gray-900">
                  <%= @search_profile.first_name %> 
                  <% if @search_profile.middle_name.present? %>
                    <%= @search_profile.middle_name %> 
                  <% end %>
                  <%= @search_profile.last_name %>
                </p>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-500">Seeker Information</label>
                <p class="text-gray-900"><%= @search_profile.user.email %></p>
                <p class="text-sm text-gray-500">Member since <%= @search_profile.user.created_at.strftime("%B %Y") %></p>
              </div>

              <% if @search_profile.address %>
                <div>
                  <label class="block text-sm font-medium text-gray-500">Search Location</label>
                  <p class="text-gray-900">
                    <%= [@search_profile.address.city, @search_profile.address.state, @search_profile.address.country].compact.join(", ") %>
                  </p>
                </div>
              <% end %>

              <div>
                <label class="block text-sm font-medium text-gray-500">Profile Created</label>
                <p class="text-gray-900"><%= @search_profile.created_at.strftime("%B %d, %Y") %></p>
              </div>
            </div>
          </div>

          <!-- Matched Person -->
          <div class="border rounded-lg p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 text-center bg-green-50 py-2 rounded">
              üë§ Found Person
            </h3>
            
            <% if @matched_user&.personal_info %>
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-500">Full Name</label>
                  <p class="text-lg font-medium text-gray-900">
                    <%= @matched_user.personal_info.first_name %> 
                    <% if @matched_user.personal_info.middle_name.present? %>
                      <%= @matched_user.personal_info.middle_name %> 
                    <% end %>
                    <%= @matched_user.personal_info.last_name %>
                  </p>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-500">Contact Information</label>
                  <p class="text-gray-900"><%= @matched_user.email %></p>
                  <% if @matched_user.personal_info.phone_number.present? %>
                    <p class="text-gray-900"><%= @matched_user.personal_info.phone_number %></p>
                  <% end %>
                  <p class="text-sm text-gray-500">Member since <%= @matched_user.created_at.strftime("%B %Y") %></p>
                </div>

                <% if @matched_user.address %>
                  <div>
                    <label class="block text-sm font-medium text-gray-500">Current Location</label>
                    <p class="text-gray-900">
                      <%= [@matched_user.address.city, @matched_user.address.state, @matched_user.address.country].compact.join(", ") %>
                    </p>
                    <% if @matched_user.address.neighborhood.present? %>
                      <p class="text-sm text-gray-500">Neighborhood: <%= @matched_user.address.neighborhood %></p>
                    <% end %>
                  </div>
                <% end %>

                <div>
                  <label class="block text-sm font-medium text-gray-500">Profile Created</label>
                  <p class="text-gray-900"><%= @matched_user.personal_info.created_at.strftime("%B %d, %Y") %></p>
                </div>
              </div>
            <% else %>
              <div class="text-center py-8">
                <p class="text-gray-500">No personal information available for this user</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Match Analysis -->
        <div class="mt-8 bg-gray-50 rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Match Analysis</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h4 class="text-sm font-medium text-gray-500 mb-2">Name Comparison</h4>
              <div class="space-y-1">
                <div class="flex justify-between">
                  <span>First Name:</span>
                  <span class="<%= @search_profile.first_name.downcase == @matched_user&.personal_info&.first_name&.downcase ? 'text-green-600 font-medium' : 'text-red-600' %>">
                    <%= @search_profile.first_name %> vs <%= @matched_user&.personal_info&.first_name || 'N/A' %>
                  </span>
                </div>
                <div class="flex justify-between">
                  <span>Last Name:</span>
                  <span class="<%= @search_profile.last_name.downcase == @matched_user&.personal_info&.last_name&.downcase ? 'text-green-600 font-medium' : 'text-red-600' %>">
                    <%= @search_profile.last_name %> vs <%= @matched_user&.personal_info&.last_name || 'N/A' %>
                  </span>
                </div>
              </div>
            </div>

            <div>
              <h4 class="text-sm font-medium text-gray-500 mb-2">Location Comparison</h4>
              <% if @search_profile.address && @matched_user&.address %>
                <div class="space-y-1">
                  <div class="flex justify-between">
                    <span>Country:</span>
                    <span class="<%= @search_profile.address.country&.downcase == @matched_user.address.country&.downcase ? 'text-green-600 font-medium' : 'text-red-600' %>">
                      <%= @search_profile.address.country %> vs <%= @matched_user.address.country %>
                    </span>
                  </div>
                  <div class="flex justify-between">
                    <span>State:</span>
                    <span class="<%= @search_profile.address.state&.downcase == @matched_user.address.state&.downcase ? 'text-green-600 font-medium' : 'text-red-600' %>">
                      <%= @search_profile.address.state %> vs <%= @matched_user.address.state %>
                    </span>
                  </div>
                  <div class="flex justify-between">
                    <span>City:</span>
                    <span class="<%= @search_profile.address.city&.downcase == @matched_user.address.city&.downcase ? 'text-green-600 font-medium' : 'text-red-600' %>">
                      <%= @search_profile.address.city %> vs <%= @matched_user.address.city %>
                    </span>
                  </div>
                </div>
              <% else %>
                <p class="text-gray-500">Location information not available for comparison</p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Admin Notes Section -->
        <div class="mt-8 bg-yellow-50 border border-yellow-200 rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-2">Admin Review Guidelines</h3>
          <ul class="text-sm text-gray-700 space-y-1">
            <li>‚Ä¢ Verify that names match or are very similar</li>
            <li>‚Ä¢ Check location compatibility</li>
            <li>‚Ä¢ Consider the timeline (when profiles were created)</li>
            <li>‚Ä¢ Look for additional identifying information</li>
            <li>‚Ä¢ When in doubt, approve the match - users can verify themselves</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>