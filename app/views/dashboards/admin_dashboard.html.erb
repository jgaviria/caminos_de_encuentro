<!-- Admin Dashboard -->
<div class="space-y-8">
  <!-- Enhanced Welcome Header -->
  <div class="relative bg-gradient-to-r from-purple-600 via-purple-700 to-indigo-700 rounded-2xl shadow-xl overflow-hidden">
    <div class="relative px-6 py-10 sm:px-10 sm:py-12">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <!-- Main Welcome Content -->
        <div class="flex-1">
          <div>
            <h1 class="text-3xl font-bold text-white mb-4">
              Admin Dashboard
            </h1>
            <p class="text-purple-100 text-lg font-medium">System-wide match management and oversight</p>
            <p class="text-purple-200 text-sm mt-1 opacity-90">
              Manage all matches and monitor platform activity
            </p>
          </div>
        </div>
        
        <!-- Quick Action Button -->
        <div class="mt-6 sm:mt-0 sm:ml-8 flex-shrink-0">
          <%= link_to admin_matches_path, class: "inline-flex items-center px-6 py-3 bg-white bg-opacity-20 backdrop-blur-sm hover:bg-opacity-30 text-white font-semibold rounded-xl transition-all duration-200 border border-white border-opacity-30" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
            Manage Matches
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Admin Statistics Section -->
  <div class="space-y-6">
    <!-- Section Header -->
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-2xl font-bold text-gray-900">System Overview</h2>
        <p class="text-gray-600 mt-1">Platform-wide statistics and metrics</p>
      </div>
      <div class="text-sm text-gray-500">
        Last updated <%= Time.current.strftime("%B %d, %Y at %I:%M %p") %>
      </div>
    </div>

    <!-- Enhanced Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Total Matches -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600">Total Matches</p>
            <div class="flex items-baseline">
              <p class="text-2xl font-bold text-gray-900"><%= Match.count %></p>
              <p class="ml-2 text-sm text-blue-600">System-wide</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Users -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m3 5.197H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600">Total Users</p>
            <div class="flex items-baseline">
              <p class="text-2xl font-bold text-gray-900"><%= User.count %></p>
              <p class="ml-2 text-sm text-green-600">Registered</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Search Profiles -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600">Search Profiles</p>
            <div class="flex items-baseline">
              <p class="text-2xl font-bold text-gray-900"><%= SearchProfile.count %></p>
              <p class="ml-2 text-sm text-purple-600">Active</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Verified Matches -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600">Verified Matches</p>
            <div class="flex items-baseline">
              <p class="text-2xl font-bold text-gray-900"><%= Match.where(is_verified: true).count %></p>
              <p class="ml-2 text-sm text-yellow-600">Confirmed</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Administrative Tools Section -->
  <div class="space-y-6">
    <!-- Section Header -->
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-2xl font-bold text-gray-900">Administrative Tools</h2>
        <p class="text-gray-600 mt-1">Platform management and oversight</p>
      </div>
    </div>

    <!-- Primary Admin Actions -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Match Management Card -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 hover:shadow-lg hover:border-blue-300 transition-all duration-200 overflow-hidden">
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center">
              <div class="h-12 w-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900">Match Management</h3>
                <p class="text-sm text-gray-600">Review, verify and manage all system matches</p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-gray-900"><%= Match.count %></div>
              <div class="text-xs text-gray-500">Total Matches</div>
            </div>
          </div>
          
          <!-- Quick Stats -->
          <div class="grid grid-cols-3 gap-4 pt-4 border-t border-gray-100">
            <div class="text-center">
              <div class="text-lg font-semibold text-green-600"><%= Match.where(is_verified: true).count %></div>
              <div class="text-xs text-gray-500">Verified</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-semibold text-yellow-600"><%= Match.where(is_verified: false).count %></div>
              <div class="text-xs text-gray-500">Pending</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-semibold text-blue-600"><%= Match.where('similarity_score > 0.8').count %></div>
              <div class="text-xs text-gray-500">High Score</div>
            </div>
          </div>
        </div>
        
        <!-- Action Footer -->
        <div class="px-6 py-3 bg-gray-50 border-t border-gray-100">
          <%= link_to admin_matches_path, class: "w-full bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 px-4 rounded-lg transition-colors duration-200 block text-center" do %>
            Manage Matches
          <% end %>
        </div>
      </div>

      <!-- User & Profile Management Card -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 hover:shadow-lg hover:border-green-300 transition-all duration-200 overflow-hidden">
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center">
              <div class="h-12 w-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900">User & Profile Management</h3>
                <p class="text-sm text-gray-600">View and manage all user search profiles</p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-gray-900"><%= SearchProfile.count %></div>
              <div class="text-xs text-gray-500">Search Profiles</div>
            </div>
          </div>
          
          <!-- Quick Stats -->
          <div class="grid grid-cols-3 gap-4 pt-4 border-t border-gray-100">
            <div class="text-center">
              <div class="text-lg font-semibold text-blue-600"><%= User.count %></div>
              <div class="text-xs text-gray-500">Total Users</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-semibold text-green-600"><%= User.joins(:personal_info).count %></div>
              <div class="text-xs text-gray-500">Complete Profiles</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-semibold text-purple-600"><%= SearchProfile.joins(:matches).distinct.count %></div>
              <div class="text-xs text-gray-500">With Matches</div>
            </div>
          </div>
        </div>
        
        <!-- Action Footer -->
        <div class="px-6 py-3 bg-gray-50 border-t border-gray-100">
          <%= link_to search_profiles_path, class: "inline-block w-full bg-green-600 hover:bg-green-700 text-white text-sm font-medium py-2 px-4 rounded-lg transition-colors duration-200 text-center no-underline" do %>
            View All Profiles
          <% end %>
        </div>
      </div>
    </div>

    <!-- Secondary Admin Actions -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Quick Actions</h3>
        <p class="text-sm text-gray-600 mt-1">Common administrative tasks</p>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <!-- Export Data -->
          <%= link_to export_admin_matches_path(format: :csv), class: "flex items-center p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors duration-200 group" do %>
            <div class="h-10 w-10 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h4 class="text-sm font-medium text-gray-900 group-hover:text-purple-600">Export Matches</h4>
              <p class="text-xs text-gray-500">Download CSV report</p>
            </div>
          <% end %>

          <!-- System Stats -->
          <div class="flex items-center p-4 bg-gray-50 rounded-xl">
            <div class="h-10 w-10 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h4 class="text-sm font-medium text-gray-900">System Health</h4>
              <p class="text-xs text-green-600">All systems operational</p>
            </div>
          </div>

          <!-- Recent Activity -->
          <div class="flex items-center p-4 bg-gray-50 rounded-xl">
            <div class="h-10 w-10 bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h4 class="text-sm font-medium text-gray-900">Recent Activity</h4>
              <p class="text-xs text-gray-500">Last 24 hours</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>