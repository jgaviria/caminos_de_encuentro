<div class="bg-white">
  <!-- Header -->
  <header class="fixed inset-x-0 top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100 shadow-sm">
    <nav class="flex items-center justify-between p-6 lg:px-8 max-w-7xl mx-auto" aria-label="Global">
      <div class="flex lg:flex-1">
        <a href="#" class="-m-1.5 p-1.5 flex items-center group">
          <div class="h-10 w-10 bg-gradient-to-br from-indigo-600 to-purple-700 rounded-xl flex items-center justify-center mr-3 group-hover:scale-105 transition-transform duration-200">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <div>
            <span class="text-xl font-bold text-gray-900 group-hover:text-indigo-600 transition-colors duration-200"><%= t('nav.title') %></span>
            <div class="text-xs text-gray-500 -mt-0.5"><%= t('nav.subtitle') %></div>
          </div>
        </a>
      </div>
      <div class="flex lg:hidden">
        <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700 hover:bg-gray-100 transition-colors" onclick="toggleMobileMenu()">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:gap-x-8">
        <a href="#servicios" class="relative text-sm font-semibold leading-6 text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md transition-all duration-200 group">
          <%= t('nav.services') %>
          <span class="absolute inset-x-1 -bottom-px h-px bg-gradient-to-r from-indigo-500/0 via-indigo-500/40 to-indigo-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-200"></span>
        </a>
        <a href="#testimonios" class="relative text-sm font-semibold leading-6 text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md transition-all duration-200 group">
          <%= t('nav.testimonials') %>
          <span class="absolute inset-x-1 -bottom-px h-px bg-gradient-to-r from-indigo-500/0 via-indigo-500/40 to-indigo-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-200"></span>
        </a>
        <a href="#ayuda" class="relative text-sm font-semibold leading-6 text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md transition-all duration-200 group">
          <%= t('nav.help') %>
          <span class="absolute inset-x-1 -bottom-px h-px bg-gradient-to-r from-indigo-500/0 via-indigo-500/40 to-indigo-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-200"></span>
        </a>
      </div>
      <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:items-center lg:gap-x-4">
        <!-- Language Toggle -->
        <div class="flex items-center space-x-2 bg-gray-100 rounded-lg p-1">
          <%= link_to url_for(locale: :es), class: "px-3 py-1.5 text-xs font-medium rounded-md transition-all duration-200 #{'bg-white text-gray-900 shadow-sm' if I18n.locale == :es} #{'text-gray-500 hover:text-gray-700' if I18n.locale != :es}" do %>
            ES
          <% end %>
          <%= link_to url_for(locale: :en), class: "px-3 py-1.5 text-xs font-medium rounded-md transition-all duration-200 #{'bg-white text-gray-900 shadow-sm' if I18n.locale == :en} #{'text-gray-500 hover:text-gray-700' if I18n.locale != :en}" do %>
            EN
          <% end %>
        </div>
        
        <%= link_to new_user_session_path, class: "text-sm font-semibold leading-6 text-gray-700 hover:text-indigo-600 px-4 py-2 rounded-lg transition-all duration-200 hover:bg-gray-50" do %>
          <%= t('nav.login') %> <span aria-hidden="true">→</span>
        <% end %>
        <%= link_to new_user_registration_path, class: "bg-indigo-600 text-white px-6 py-2.5 rounded-xl text-sm font-semibold shadow-lg hover:bg-indigo-700 transition-all duration-200" do %>
          <%= t('nav.start_search') %>
        <% end %>
      </div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div id="mobile-menu" class="lg:hidden hidden" role="dialog" aria-modal="true">
      <!-- Background backdrop, show/hide based on slide-over state. -->
      <div class="fixed inset-0 z-50 bg-gray-600/50" onclick="toggleMobileMenu()"></div>
      <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10 shadow-xl">
        <div class="flex items-center justify-between">
          <a href="#" class="-m-1.5 p-1.5 flex items-center">
            <div class="h-8 w-8 bg-gradient-to-br from-indigo-600 to-purple-700 rounded-lg flex items-center justify-center mr-2">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <span class="text-lg font-bold text-gray-900"><%= t('nav.title') %></span>
          </a>
          <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700 hover:bg-gray-100 transition-colors" onclick="toggleMobileMenu()">
            <span class="sr-only">Close menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-500/10">
            <div class="space-y-2 py-6">
              <a href="#servicios" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-indigo-50 hover:text-indigo-600 transition-colors" onclick="toggleMobileMenu()"><%= t('nav.services') %></a>
              <a href="#testimonios" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-indigo-50 hover:text-indigo-600 transition-colors" onclick="toggleMobileMenu()"><%= t('nav.testimonials') %></a>
              <a href="#ayuda" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-indigo-50 hover:text-indigo-600 transition-colors" onclick="toggleMobileMenu()"><%= t('nav.help') %></a>
            </div>
            <div class="py-6 space-y-3">
              <!-- Mobile Language Toggle -->
              <div class="flex items-center justify-center space-x-2 bg-gray-100 rounded-lg p-1 mx-3 mb-4">
                <%= link_to url_for(locale: :es), class: "flex-1 px-3 py-2 text-sm font-medium rounded-md text-center transition-all duration-200 #{'bg-white text-gray-900 shadow-sm' if I18n.locale == :es} #{'text-gray-500 hover:text-gray-700' if I18n.locale != :es}" do %>
                  Español
                <% end %>
                <%= link_to url_for(locale: :en), class: "flex-1 px-3 py-2 text-sm font-medium rounded-md text-center transition-all duration-200 #{'bg-white text-gray-900 shadow-sm' if I18n.locale == :en} #{'text-gray-500 hover:text-gray-700' if I18n.locale != :en}" do %>
                  English
                <% end %>
              </div>
              
              <%= link_to new_user_session_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50 transition-colors" do %>
                <%= t('nav.login') %> →
              <% end %>
              <%= link_to new_user_registration_path, class: "block rounded-lg bg-gradient-to-r from-indigo-600 to-purple-600 px-3 py-2.5 text-center text-base font-semibold text-white shadow-lg" do %>
                <%= t('nav.start_search') %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <script>
      function toggleMobileMenu() {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
      }
      
      // Close mobile menu when clicking on navigation links
      document.addEventListener('DOMContentLoaded', function() {
        const mobileLinks = document.querySelectorAll('#mobile-menu a[href^="#"]');
        mobileLinks.forEach(link => {
          link.addEventListener('click', function() {
            setTimeout(() => toggleMobileMenu(), 100);
          });
        });
      });
    </script>
  </header>

