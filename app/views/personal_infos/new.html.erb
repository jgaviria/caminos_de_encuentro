<!-- app/views/personal_infos/new.html.erb -->

<!-- Progress bar component -->
<div class="w-full bg-gray-200 rounded-full h-2.5 mb-5">
  <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= @progress_percentage %>%;"></div>
</div>

<div class="max-w-md mx-auto mt-10">
  <h2 class="text-2xl font-bold mb-5">Personal Information</h2>
  <div class="w-full bg-gray-200 rounded-full h-2.5 mb-5">
    <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= @progress_percentage %>%;"></div>
  </div>
  <%= form_with(model: @personal_info, url: personal_info_path, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :first_name, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :first_name, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="mb-4">
      <%= form.label :middle_name, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :middle_name, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="mb-4">
      <%= form.label :last_name, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :last_name, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="mb-4">
      <%= form.label :phone_number, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :phone_number, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="flex justify-between items-center">
      <%= form.submit 'Next', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <div class="text-sm text-gray-600">Step 1 of 3</div>
    </div>
  <% end %>
</div>
