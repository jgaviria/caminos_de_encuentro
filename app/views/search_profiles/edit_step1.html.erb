<!-- Edit Step 1: Basic Information -->
<div class="max-w-2xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to search_profiles_path(locale: I18n.locale), class: "inline-flex items-center text-blue-600 hover:text-blue-700 mb-4" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Search Profiles
    <% end %>
    
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg shadow-lg">
      <div class="px-6 py-8 sm:px-8">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-12 w-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-6">
            <h1 class="text-2xl font-bold text-white">Edit Search Profile</h1>
            <p class="text-blue-100 mt-1">Step 1 of 3: Basic Information</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Progress Bar -->
  <div class="mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-sm font-medium text-gray-900">Edit Progress</span>
        <span class="text-sm text-gray-500"><%= @progress_percentage %>% Complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full transition-all duration-300" style="width: <%= @progress_percentage %>%;"></div>
      </div>
    </div>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Personal Information</h3>
      <p class="text-sm text-gray-600 mt-1">Update the name details for the person you're searching for</p>
    </div>
    
    <div class="p-6">
      <%= form_with url: edit_step1_search_profile_path(@search_profile, locale: I18n.locale), method: :patch, local: true, class: "space-y-6" do |form| %>
        <!-- Form Fields -->
        <div class="mb-4">
          <%= form.label "search_profile[first_name]", "First Name", class: "block text-sm font-medium text-gray-700 mb-2" do %>
            First Name
            <span class="text-red-500 ml-1">*</span>
          <% end %>
          
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <%= form.text_field "search_profile[first_name]", 
                value: @search_profile_data["first_name"], 
                placeholder: "Enter first name",
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm pl-10",
                required: true %>
          </div>
          <p class="mt-1 text-sm text-gray-500">The first name of the person you are looking for</p>
        </div>

        <div class="mb-4">
          <%= form.label "search_profile[middle_name]", "Middle Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <%= form.text_field "search_profile[middle_name]", 
                value: @search_profile_data["middle_name"], 
                placeholder: "Enter middle name (optional)",
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm pl-10" %>
          </div>
          <p class="mt-1 text-sm text-gray-500">Any middle names or second names (optional)</p>
        </div>

        <div class="mb-4">
          <%= form.label "search_profile[last_name]", "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" do %>
            Last Name
            <span class="text-red-500 ml-1">*</span>
          <% end %>
          
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <%= form.text_field "search_profile[last_name]", 
                value: @search_profile_data["last_name"], 
                placeholder: "Enter last name",
                class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm pl-10",
                required: true %>
          </div>
          <p class="mt-1 text-sm text-gray-500">The family name or surname</p>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
          <div class="text-sm text-gray-500">
            Step 1 of 3 - Basic Information
          </div>
          
          <div class="flex space-x-3">
            <%= link_to "Cancel", search_profiles_path(locale: I18n.locale), 
                class: "px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors duration-200" %>
            
            <%= form.submit "Continue to Location", 
                class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>