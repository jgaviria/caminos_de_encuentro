<!-- Edit Step 3: Review and Update -->
<div class="max-w-2xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to edit_step2_search_profile_path(@search_profile, locale: I18n.locale), class: "inline-flex items-center text-blue-600 hover:text-blue-700 mb-4" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Location Information
    <% end %>
    
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg shadow-lg">
      <div class="px-6 py-8 sm:px-8">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-12 w-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-6">
            <h1 class="text-2xl font-bold text-white">Edit Search Profile</h1>
            <p class="text-blue-100 mt-1">Step 3 of 3: Review and Update</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Progress Bar -->
  <div class="mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-sm font-medium text-gray-900">Edit Progress</span>
        <span class="text-sm text-gray-500"><%= @progress_percentage %>% Complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full transition-all duration-300" style="width: <%= @progress_percentage %>%;"></div>
      </div>
    </div>
  </div>

  <!-- Review Information -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Review Your Changes</h3>
      <p class="text-sm text-gray-600 mt-1">Please review the updated information before saving your changes</p>
    </div>
    
    <div class="p-6 space-y-6">
      <!-- Basic Information -->
      <div>
        <h4 class="text-md font-medium text-gray-900 mb-3">Personal Information</h4>
        <div class="bg-gray-50 rounded-lg p-4 space-y-2">
          <div class="flex justify-between">
            <span class="text-sm font-medium text-gray-700">First Name:</span>
            <span class="text-sm text-gray-900"><%= @search_profile_data['first_name'] || 'Not provided' %></span>
          </div>
          <% if @search_profile_data['middle_name'].present? %>
            <div class="flex justify-between">
              <span class="text-sm font-medium text-gray-700">Middle Name:</span>
              <span class="text-sm text-gray-900"><%= @search_profile_data['middle_name'] %></span>
            </div>
          <% end %>
          <div class="flex justify-between">
            <span class="text-sm font-medium text-gray-700">Last Name:</span>
            <span class="text-sm text-gray-900"><%= @search_profile_data['last_name'] || 'Not provided' %></span>
          </div>
        </div>
        <div class="mt-2">
          <%= link_to "Edit", edit_step1_search_profile_path(@search_profile, locale: I18n.locale), 
              class: "text-blue-600 hover:text-blue-700 text-sm font-medium" %>
        </div>
      </div>

      <!-- Location Information -->
      <div>
        <h4 class="text-md font-medium text-gray-900 mb-3">Location Information</h4>
        <div class="bg-gray-50 rounded-lg p-4 space-y-2">
          <% if @search_profile_data['country'].present? %>
            <div class="flex justify-between">
              <span class="text-sm font-medium text-gray-700">Country:</span>
              <span class="text-sm text-gray-900"><%= @search_profile_data['country'] %></span>
            </div>
          <% end %>
          <% if @search_profile_data['state'].present? %>
            <div class="flex justify-between">
              <span class="text-sm font-medium text-gray-700">State/Department:</span>
              <span class="text-sm text-gray-900"><%= @search_profile_data['state'] %></span>
            </div>
          <% end %>
          <% if @search_profile_data['city'].present? %>
            <div class="flex justify-between">
              <span class="text-sm font-medium text-gray-700">City:</span>
              <span class="text-sm text-gray-900"><%= @search_profile_data['city'] %></span>
            </div>
          <% end %>
          <% if @search_profile_data['neighborhood'].present? %>
            <div class="flex justify-between">
              <span class="text-sm font-medium text-gray-700">Neighborhood:</span>
              <span class="text-sm text-gray-900"><%= @search_profile_data['neighborhood'] %></span>
            </div>
          <% end %>
          <% unless [@search_profile_data['country'], @search_profile_data['state'], @search_profile_data['city'], @search_profile_data['neighborhood']].any?(&:present?) %>
            <div class="text-sm text-gray-500 italic">No location information provided</div>
          <% end %>
        </div>
        <div class="mt-2">
          <%= link_to "Edit", edit_step2_search_profile_path(@search_profile, locale: I18n.locale), 
              class: "text-blue-600 hover:text-blue-700 text-sm font-medium" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Update Profile Form -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="p-6">
      <%= form_with url: search_profile_path(@search_profile, locale: I18n.locale), method: :patch, local: true do |form| %>
        <!-- Form Actions -->
        <div class="flex items-center justify-between">
          <div class="text-sm text-gray-500">
            Step 3 of 3 - Final Step
          </div>
          
          <div class="flex space-x-3">
            <%= link_to "Back", edit_step2_search_profile_path(@search_profile, locale: I18n.locale), 
                class: "px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors duration-200" %>
            
            <%= form.submit "Update Search Profile", 
                class: "px-6 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>