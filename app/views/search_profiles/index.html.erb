<!-- Search Profiles Index -->
<div class="space-y-8">
  <!-- Enhanced Page Header -->
  <div class="rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="bg-gradient-to-r from-green-600 to-emerald-700 relative px-6 py-10 sm:px-10 sm:py-12">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div class="flex-1">
          <div>
            <h1 class="text-3xl font-bold text-white mb-4">
              <%= t('user.search_profiles_title') %>
            </h1>
            <p class="text-white text-lg font-medium"><%= t('user.create_search') %></p>
            <p class="text-white text-sm mt-1 opacity-90">
              <%= t('user.search_for') %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <% if current_user.admin? %>
      <%= render 'shared/stat_card', 
          title: t('user.search_profiles'), 
          value: @search_profiles.count, 
          icon: 'users', 
          color: 'blue' %>
      
      <%= render 'shared/stat_card', 
          title: t('user.profiles_with_matches'), 
          value: @search_profiles.with_matches.count, 
          icon: 'target', 
          color: 'green' %>
      
      <%= render 'shared/stat_card', 
          title: t('user.pending_matches'), 
          value: @search_profiles.pending.count, 
          icon: 'clock', 
          color: 'yellow' %>
      
      <%= render 'shared/stat_card', 
          title: t('user.total_matches_found'), 
          value: @search_profiles.sum(:match_count), 
          icon: 'check', 
          color: 'purple' %>
    <% else %>
      <%= render 'shared/stat_card', 
          title: t('user.my_searches'), 
          value: @search_profiles.count, 
          icon: 'heart', 
          color: 'blue' %>
      
      <%= render 'shared/stat_card', 
          title: t('user.my_matches_found'), 
          value: @search_profiles.sum(:match_count), 
          icon: 'target', 
          color: 'green' %>
      
      <%= render 'shared/stat_card', 
          title: t('user.pending_matches'), 
          value: @search_profiles.pending.count, 
          icon: 'clock', 
          color: 'yellow' %>
      
      <%= render 'shared/stat_card', 
          title: t('user.profiles_with_matches'), 
          value: @search_profiles.with_matches.count, 
          icon: 'check', 
          color: 'purple' %>
    <% end %>
  </div>

  <!-- Search Profiles Grid -->
  <% if @search_profiles.any? %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <div class="px-6 py-5 border-b border-gray-200">
        <h3 class="text-xl font-semibold text-gray-900"><%= t('user.search_profiles_title') %></h3>
        <p class="text-sm text-gray-600 mt-1"><%= t('user.view_details') %></p>
      </div>
      
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @search_profiles.each do |profile| %>
            <div class="bg-white rounded-xl border border-gray-200 hover:shadow-lg hover:border-green-300 transition-all duration-300 overflow-hidden group">
              <div class="p-6">
                <!-- Profile Header -->
                <div class="flex flex-col items-center text-center mb-6">
                  <div class="h-16 w-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center mb-3">
                    <span class="text-white font-bold text-xl">
                      <%= profile.first_name.first.upcase %>
                    </span>
                  </div>
                  <div>
                    <h4 class="text-xl font-semibold text-gray-900 mb-1">
                      <%= profile.first_name %>
                      <% if profile.middle_name.present? %>
                        <%= profile.middle_name %>
                      <% end %>
                      <%= profile.last_name %>
                    </h4>
                    <p class="text-sm text-gray-600">
                      <%= t('forms.search_profile') %>
                    </p>
                  </div>
                </div>

                <!-- Profile Details -->
                <div class="space-y-4 mb-6">
                  <div class="grid grid-cols-2 gap-3">
                    <div>
                      <span class="text-xs text-gray-500 font-medium uppercase tracking-wide"><%= t('user.created_by') %></span>
                      <p class="text-sm font-medium text-gray-900 mt-1">
                        <% if profile.user == current_user %>
                          <%= t('user.my_profile') %>
                        <% elsif current_user.admin? %>
                          <% if profile.user.personal_info&.first_name.present? %>
                            <%= profile.user.personal_info.first_name %> <%= profile.user.personal_info.last_name %>
                          <% else %>
                            <%= profile.user.email.split('@').first.titleize %>
                          <% end %>
                        <% else %>
                          <%= t('user.my_profile') %>
                        <% end %>
                      </p>
                    </div>
                    
                    <div>
                      <span class="text-xs text-gray-500 font-medium uppercase tracking-wide"><%= t('user.created_on') %></span>
                      <p class="text-sm text-gray-900 mt-1">
                        <%= time_ago_in_words(profile.created_at) %>
                      </p>
                    </div>
                  </div>

                  <% if profile.address %>
                    <div class="pt-2 border-t border-gray-100">
                      <span class="text-xs text-gray-500 font-medium uppercase tracking-wide"><%= t('forms.address') %></span>
                      <p class="text-sm text-gray-900 mt-1">
                        <%= [profile.address.city, profile.address.state].compact.join(", ") %>
                      </p>
                    </div>
                  <% end %>

                  <!-- Match Status Section -->
                  <div class="pt-2 border-t border-gray-100">
                    <div class="grid grid-cols-2 gap-3">
                      <div>
                        <span class="text-xs text-gray-500 font-medium uppercase tracking-wide"><%= t('user.match_status') %></span>
                        <div class="flex items-center mt-1">
                          <% color_class = case profile.match_status_color
                                          when 'yellow' then 'bg-yellow-100 text-yellow-800'
                                          when 'blue' then 'bg-blue-100 text-blue-800'
                                          when 'green' then 'bg-green-100 text-green-800'
                                          when 'gray' then 'bg-gray-100 text-gray-800'
                                          when 'red' then 'bg-red-100 text-red-800'
                                          else 'bg-gray-100 text-gray-800'
                                          end %>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= color_class %>">
                            <% case profile.match_status
                               when 'pending' %>
                              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.414-1.414L11 9.586V6z" clip-rule="evenodd"></path>
                              </svg>
                            <% when 'processing' %>
                              <svg class="w-3 h-3 mr-1 animate-spin" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                              </svg>
                            <% when 'completed' %>
                              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                              </svg>
                            <% when 'failed' %>
                              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                              </svg>
                            <% end %>
                            <%= profile.match_status_display %>
                          </span>
                        </div>
                      </div>
                      
                      <div>
                        <span class="text-xs text-gray-500 font-medium uppercase tracking-wide"><%= t('user.last_matched') %></span>
                        <p class="text-sm text-gray-900 mt-1">
                          <%= profile.last_matched_display %>
                        </p>
                      </div>
                    </div>
                  </div>

                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col gap-2">
                  <% if profile.user == current_user || current_user.admin? %>
                    <div class="flex gap-2">
                      <%= link_to edit_search_profile_path(profile), 
                          class: "flex-1 inline-flex items-center justify-center px-3 py-2 border border-blue-300 text-sm font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 transition-colors duration-200" do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        <%= t('general.edit') %>
                      <% end %>
                      
                      <%= button_to search_profile_path(profile), method: :delete,
                          data: { confirm: t('user.confirm_delete_search_profile', name: "#{profile.first_name} #{profile.last_name}") },
                          class: "flex-1 inline-flex items-center justify-center px-3 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100 transition-colors duration-200" do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        <%= t('general.delete') %>
                      <% end %>
                    </div>
                  <% end %>
                  
                  <% if current_user.admin? %>
                    <%= button_to match_search_profile_path(profile), method: :post,
                        data: { confirm: t('admin.confirm_run_matching', name: "#{profile.first_name} #{profile.last_name}") },
                        class: "w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 transition-colors duration-200" do %>
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                      </svg>
                      <%= t('admin.run_matching') %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t('user.search_profiles') %></h3>
        <p class="text-gray-600 mb-6">
          <%= t('user.create_search') %>
        </p>
        <%= link_to t('user.create_profile'), new_search_profile_path, 
            class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200" %>
      </div>
    </div>
  <% end %>

  <!-- Help Section -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-900"><%= t('user.search_profiles_title') %></h3>
        <div class="mt-2 text-sm text-blue-800">
          <p><%= t('user.search_for') %> 
          <% if current_user.admin? %>
            <%= t('admin.match_details') %>
          <% else %>
            <%= t('user.view_details') %>
          <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
