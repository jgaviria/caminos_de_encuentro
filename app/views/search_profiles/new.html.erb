<!-- Create Search Profile -->
<div class="max-w-2xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to search_profiles_path, class: "inline-flex items-center text-blue-600 hover:text-blue-700 mb-4" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Search Profiles
    <% end %>
    
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg shadow-lg">
      <div class="px-6 py-8 sm:px-8">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-12 w-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-6">
            <h1 class="text-2xl font-bold text-white">Create Search Profile</h1>
            <p class="text-blue-100 mt-1">Add information about someone you're looking for</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Progress Bar -->
  <div class="mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-sm font-medium text-gray-900">Profile Setup Progress</span>
        <span class="text-sm text-gray-500"><%= @progress_percentage %>% Complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full transition-all duration-300" style="width: <%= @progress_percentage %>%;"></div>
      </div>
    </div>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Personal Information</h3>
      <p class="text-sm text-gray-600 mt-1">Enter the name details for the person you're searching for</p>
    </div>
    
    <div class="p-6">
      <%= form_with(model: @search_profile, local: true, class: "space-y-6") do |form| %>
        <!-- Display form errors if any -->
        <% if @search_profile.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% @search_profile.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Form Fields -->
        <%= render 'shared/form_field', 
            form: form, 
            field: :first_name, 
            label: 'First Name', 
            type: 'text',
            required: true,
            placeholder: 'Enter first name',
            help_text: 'The first name of the person you are looking for',
            icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>' %>
        
        <%= render 'shared/form_field', 
            form: form, 
            field: :middle_name, 
            label: 'Middle Name', 
            type: 'text',
            placeholder: 'Enter middle name (optional)',
            help_text: 'Any middle names or second names (optional)',
            icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>' %>
        
        <%= render 'shared/form_field', 
            form: form, 
            field: :last_name, 
            label: 'Last Name', 
            type: 'text',
            required: true,
            placeholder: 'Enter last name',
            help_text: 'The family name or surname',
            icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>' %>

        <!-- Additional Information Section -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-900">Important Information</h3>
              <div class="mt-2 text-sm text-blue-800">
                <ul class="list-disc list-inside space-y-1">
                  <li>Provide as much accurate information as possible for better matching</li>
                  <li>Double-check spelling of names to ensure accurate searches</li>
                  <li>You can edit this information later if needed</li>
                  <li>All information is kept confidential and secure</li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
          <div class="text-sm text-gray-500">
            Step 3 of 3 - Final Step
          </div>
          
          <div class="flex space-x-3">
            <%= link_to "Cancel", search_profiles_path, 
                class: "px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors duration-200" %>
            
            <%= form.submit "Create Search Profile", 
                class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Help Section -->
  <div class="mt-8 bg-gray-50 rounded-lg p-6">
    <h3 class="text-sm font-medium text-gray-900 mb-2">What happens next?</h3>
    <div class="text-sm text-gray-600 space-y-2">
      <p>• Your search profile will be saved and can be viewed in your dashboard</p>
      <p>• <% if current_user.admin? %>As an admin, you can run matching algorithms to find potential connections<% else %>Our administrators will periodically run matching algorithms<% end %></p>
      <p>• You'll be notified if any potential matches are found</p>
      <p>• You can create multiple search profiles for different people</p>
    </div>
  </div>
</div>
