<!-- Step 2: Location Information -->
<div class="max-w-2xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to step1_search_profiles_path(locale: I18n.locale), class: "inline-flex items-center text-blue-600 hover:text-blue-700 mb-4" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Basic Information
    <% end %>
    
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg shadow-lg">
      <div class="px-6 py-8 sm:px-8">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-12 w-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-6">
            <h1 class="text-2xl font-bold text-white">Create Search Profile</h1>
            <p class="text-blue-100 mt-1">Step 2 of 3: Location Information</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Progress Bar -->
  <div class="mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-sm font-medium text-gray-900">Profile Setup Progress</span>
        <span class="text-sm text-gray-500"><%= @progress_percentage %>% Complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full transition-all duration-300" style="width: <%= @progress_percentage %>%;"></div>
      </div>
    </div>
  </div>

  <!-- Current Info Summary -->
  <div class="mb-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
    <h3 class="text-sm font-medium text-blue-900 mb-2">Search Profile So Far:</h3>
    <p class="text-sm text-blue-800">
      <strong>Name:</strong> 
      <%= [@search_profile_data['first_name'], @search_profile_data['middle_name'], @search_profile_data['last_name']].compact.join(' ') %>
    </p>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Location Information</h3>
      <p class="text-sm text-gray-600 mt-1">Where was this person last known to be located? (Optional but helps with matching)</p>
    </div>
    
    <div class="p-6">
      <%= form_with url: step2_search_profiles_path(locale: I18n.locale), method: :post, local: true, class: "space-y-6" do |form| %>
        
        <%= render 'shared/form_field', 
            form: form, 
            field: :country, 
            label: 'Country', 
            type: 'text',
            placeholder: 'Enter country (e.g., Colombia)',
            help_text: 'The country where the person was last known to be',
            icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>' %>
        
        <%= render 'shared/form_field', 
            form: form, 
            field: :state, 
            label: 'State/Department', 
            type: 'text',
            placeholder: 'Enter state or department (e.g., Antioquia)',
            help_text: 'The state, department, or province',
            icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>' %>
        
        <%= render 'shared/form_field', 
            form: form, 
            field: :city, 
            label: 'City', 
            type: 'text',
            placeholder: 'Enter city (e.g., Medellín)',
            help_text: 'The city where the person was last known to be',
            icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>' %>
        
        <%= render 'shared/form_field', 
            form: form, 
            field: :neighborhood, 
            label: 'Neighborhood', 
            type: 'text',
            placeholder: 'Enter neighborhood (optional)',
            help_text: 'The specific neighborhood or area (optional)',
            icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>' %>

        <!-- Form Actions -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
          <div class="text-sm text-gray-500">
            Step 2 of 3 - Location Information
          </div>
          
          <div class="flex space-x-3">
            <%= link_to "Back", step1_search_profiles_path(locale: I18n.locale), 
                class: "px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors duration-200" %>
            
            <%= form.submit "Continue to Review", 
                class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>

        <!-- Set form field names and values -->
        <script>
          document.addEventListener('DOMContentLoaded', function() {
            // Set field names and values for address fields
            const countryField = document.querySelector('input[name="country"]');
            const stateField = document.querySelector('input[name="state"]');
            const cityField = document.querySelector('input[name="city"]');
            const neighborhoodField = document.querySelector('input[name="neighborhood"]');
            
            if (countryField) {
              countryField.name = 'address[country]';
              countryField.value = '<%= @search_profile_data["country"] || "" %>';
            }
            if (stateField) {
              stateField.name = 'address[state]';
              stateField.value = '<%= @search_profile_data["state"] || "" %>';
            }
            if (cityField) {
              cityField.name = 'address[city]';
              cityField.value = '<%= @search_profile_data["city"] || "" %>';
            }
            if (neighborhoodField) {
              neighborhoodField.name = 'address[neighborhood]';
              neighborhoodField.value = '<%= @search_profile_data["neighborhood"] || "" %>';
            }
          });
        </script>
      <% end %>
    </div>
  </div>

  <!-- Help Section -->
  <div class="mt-8 bg-gray-50 rounded-lg p-6">
    <h3 class="text-sm font-medium text-gray-900 mb-2">Why location information?</h3>
    <div class="text-sm text-gray-600 space-y-2">
      <p>• Location information helps narrow down potential matches</p>
      <p>• People from the same region are more likely to be connected</p>
      <p>• You can leave fields blank if you don't have this information</p>
      <p>• All information can be updated later if needed</p>
    </div>
  </div>
</div>