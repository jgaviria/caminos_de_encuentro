<%
  status = local_assigns.fetch(:status, 'default')
  text = local_assigns.fetch(:text, 'Status')
%>

<% if status == 'success' || status == 'verified' || status == 'active' %>
  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border bg-green-100 text-green-800 border-green-200">
    <%= text %>
  </span>
<% elsif status == 'pending' || status == 'warning' || status == 'processing' %>
  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border bg-yellow-100 text-yellow-800 border-yellow-200">
    <%= text %>
  </span>
<% elsif status == 'danger' || status == 'error' || status == 'rejected' %>
  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border bg-red-100 text-red-800 border-red-200">
    <%= text %>
  </span>
<% elsif status == 'admin' || status == 'info' || status == 'premium' %>
  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border bg-purple-100 text-purple-800 border-purple-200">
    <%= text %>
  </span>
<% elsif status == 'primary' || status == 'match' %>
  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border bg-blue-100 text-blue-800 border-blue-200">
    <%= text %>
  </span>
<% else %>
  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border bg-gray-100 text-gray-800 border-gray-200">
    <%= text %>
  </span>
<% end %>