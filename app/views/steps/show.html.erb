<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div id="step-form" class="w-full max-w-lg p-8 bg-white rounded-lg shadow-lg">
    <% if @step == "profile" %>
      <h2 class="text-3xl text-gray-700 mb-8 text-center">Step 1: Enter Profile Information</h2>
      <%= form_with(model: @profile, local: true, class: "space-y-6") do |form| %>
        <div>
          <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :first_name, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :last_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :dob, "Date of Birth", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.date_field :dob, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

       <%= form.submit "Next: Address Information", class: "px-5 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg transition duration-300 ease-in-out transform" %>


      <% end %>
    <% elsif @step == "address" %>
      <h2 class="text-3xl text-gray-700 mb-8 text-center">Step 2: Enter Address Information</h2>
      <%= form_with(model: @address, local: true, class: "space-y-6") do |form| %>
        <div>
          <%= form.label :address_line, "Address Line", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :address_line, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :city, "City", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :city, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :country, "Country", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :country, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="flex justify-center space-x-4">
          <%= form.submit "Next: Family Member Information", class: "px-5 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg transition duration-300 ease-in-out transform" %>
        </div>
      <% end %>
    <% elsif @step == "family_member" %>
      <h2 class="text-3xl text-gray-700 mb-8 text-center">Step 3: Enter Family Member Information</h2>
      <%= form_with(model: @family_member, local: true, class: "space-y-6") do |form| %>
        <div>
          <%= form.label :relationship, "Relationship", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :relationship, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :first_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :last_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="flex justify-center space-x-4">
          <%= form.submit "Next: Education Information", class: "px-5 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg transition duration-300 ease-in-out transform" %>
        </div>
      <% end %>
    <% elsif @step == "education" %>
      <h2 class="text-3xl text-gray-700 mb-8 text-center">Step 4: Enter Education Information</h2>
      <%= form_with(model: @education, local: true, class: "space-y-6") do |form| %>
        <div>
          <%= form.label :school_name, "School Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :school_name, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :level, "Education Level", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :level, Education.levels.keys.map { |level| [level.humanize, level] }, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :date_from, "Date From", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.date_field :date_from, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :date_to, "Date To", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.date_field :date_to, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="flex justify-center space-x-4">
          <%= form.submit "Finish", class: "px-5 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg transition duration-300 ease-in-out transform" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

